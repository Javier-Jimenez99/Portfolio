---

<section id="awards" class="py-20 bg-slate-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Awards and Recognition
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        International recognition for innovation in AI, ocean technology and computer vision
      </p>
    </div>
    
    <!-- Achievements Stats -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      {achievements.map((achievement) => (
        <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">{achievement.number}</div>
          <div class="text-gray-900 dark:text-white font-semibold mb-1">{achievement.label}</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">{achievement.description}</div>
        </div>
      ))}
    </div>
    
    <!-- Awards Timeline -->
    <div class="relative">
      <!-- Timeline Line -->
      <div class="absolute left-4 md:left-1/2 transform md:-translate-x-1/2 top-0 bottom-0 w-1 bg-gradient-to-b from-blue-600 via-purple-600 to-green-600"></div>
      
      <div class="space-y-12">
        {awards.map((award, index) => (
          <div class={`flex items-center ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'} flex-col md:space-x-8`}>
            
            <!-- Timeline Node -->
            <div class="absolute left-4 md:left-1/2 transform md:-translate-x-1/2 w-8 h-8 bg-white dark:bg-gray-800 rounded-full border-4 border-blue-600 flex items-center justify-center shadow-lg">
              <div class="w-3 h-3 bg-blue-600 rounded-full"></div>
            </div>
            
            <!-- Award Content -->
            <div class={`w-full md:w-1/2 ml-16 md:ml-0 ${index % 2 === 0 ? 'md:pr-8 md:text-right' : 'md:pl-8'}`}>
              <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all duration-300">
                
                <!-- Award Header -->
                <div class={`flex items-start ${index % 2 === 0 ? 'md:flex-row-reverse md:text-right' : 'flex-row'} gap-4 mb-6`}>
                  <div class="text-6xl animate-bounce" style={`animation-delay: ${index * 0.2}s`}>
                    {award.icon}
                  </div>
                  <div class="flex-grow">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="px-3 py-1 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-sm rounded-full font-medium">
                        {award.year}
                      </span>
                      <span class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 text-sm rounded-full font-medium">
                        {award.achievement}
                      </span>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                      {award.title}
                    </h3>
                    <p class="text-blue-600 dark:text-blue-400 font-semibold mb-2">
                      {award.organization}
                    </p>
                    <span class="inline-block px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-sm rounded-full">
                      {award.category}
                    </span>
                  </div>
                </div>
                
                <!-- Award Description -->
                <div class="space-y-4">
                  <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                    {award.description}
                  </p>
                  
                  <div class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900 dark:to-purple-900 p-4 rounded-lg">
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                      <strong>Detalles:</strong> {award.details}
                    </p>
                    <p class="text-sm text-blue-600 dark:text-blue-400 font-medium">
                      <strong>Impacto:</strong> {award.impact}
                    </p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Year Badge (for larger screens) -->
            <div class="hidden md:block w-1/2">
              <div class={`${index % 2 === 0 ? 'pl-8' : 'pr-8 text-right'}`}>
                <div class="inline-block px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full font-bold text-lg shadow-lg">
                  {award.year}
                </div>
              </div>
            </div>
            
          </div>
        ))}
      </div>
    </div>
    

  </div>
</section>
