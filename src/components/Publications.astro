<script>
  function copyDOI(doi) {
    navigator.clipboard.writeText(doi).then(function() {
      // Create a temporary notification
      const notification = document.createElement('div');
      notification.textContent = 'DOI copiado al portapapeles';
      notification.className = 'fixed top-4 right-4 bg-green-600 text-white px-4 py-2 rounded-lg shadow-lg z-50 transition-opacity';
      document.body.appendChild(notification);
      
      setTimeout(() => {
        notification.style.opacity = '0';
        setTimeout(() => {
          document.body.removeChild(notification);
        }, 300);
      }, 2000);
    }, function(err) {
      console.error('Could not copy DOI: ', err);
    });
  }
</script>
